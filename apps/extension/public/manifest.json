{
  "manifest_version": 3,
  "name": "Watch Together",
  "version": "1.0.0",
  "description": "Synchronized video watching across multiple streaming sites",
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://*.youtube.com/*",
    "https://*.netflix.com/*",
    "https://*.vimeo.com/*",
    "https://*.twitch.tv/*",
    "https://*.amazon.com/*",
    "https://*.hulu.com/*",
    "https://*.disneyplus.com/*",
    "https://*/*",
    "http://localhost/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.youtube.com/*",
        "https://*.netflix.com/*",
        "https://*.vimeo.com/*",
        "https://*.twitch.tv/*",
        "https://*.amazon.com/*",
        "https://*.hulu.com/*",
        "https://*.disneyplus.com/*",
        "https://*/*",
        "http://localhost/*"
      ],
      "js": ["content.js"],
      "type": "module"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Watch Together"
  }
}