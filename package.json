{
  "name": "watch-together",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "extension:build": "turbo run build --filter=extension",
    "extension:dev": "turbo run dev --filter=extension",
    "backend:build": "turbo run build --filter=backend",
    "backend:deploy": "turbo run deploy --filter=backend",
    "test": "turbo run test",
    "test:playwright": "turbo run test:playwright",
    "test:e2e": "turbo run test:playwright"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "turbo": "^2.5.4",
    "typescript": "~5.6.0"
  },
  "packageManager": "pnpm@8.15.6"
}
